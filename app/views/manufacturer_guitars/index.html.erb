<div>
  <h1><%= @manufacturer.name %> Guitars</h1>
  <% @guitars.each do |guitar| %>
    <h3 id="<%= guitar.id %>"><%= guitar.model %> <%= link_to 'Update Guitar', "/guitars/#{guitar.id}/edit" %></h3>
    <p>Fret Count: <%= guitar.num_of_frets %></p>
    <p>Six-string? <%= guitar.six_string %></p>
  <% end %>
</div>

<%= link_to 'New Guitar', "/manufacturers/#{@manufacturer.id}/guitars/new" %><br>
<%= link_to 'Sort Alphabetically', "/manufacturers/#{@manufacturer.id}/guitars?alphabetical=true" %><br><br>
<%= form_with url: "/manufacturers/#{@manufacturer.id}/guitars", method: :get, local: true do |form| %>
  <%= form.label :minimum_frets %>
  <%= form.text_field :minimum_frets %>
  <%= form.submit 'Only return guitars with more than this many frets' %>
<% end %><br>

<a href="/manufacturers">Manufacturers Index<br></a>
<a href="/guitars">Guitars Index</a>
